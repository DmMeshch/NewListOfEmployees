@model NewListOfEmployees.Models.Employee
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        
        <dt>Дата рождения</dt>
        <dd>@Model.DateOfBirth</dd>
        <dt>Пол</dt>
        <dd>@Model.Sex</dd>
        <dt>Телефон</dt>
        <dd>@Model.PhoneNumber</dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>