@model NewListOfEmployees.Models.Employee
@{
    ViewBag.Title = Model.Fio;
}
<h2>Работник: @Model.Fio</h2>
<div>
    <dl class="dl-horizontal">
        
        <dt>Дата рождения</dt>
        <dd>@Model.DateOfBirth.ToLongDateString()</dd>
        <dt>Пол</dt>
        <dd>@Model.Sex</dd>
        <dt>Телефон</dt>
        <dd>@Model.PhoneNumber</dd>
        <dt>Фото</dt>
        <dd>
            @if (Model.AvatarByte != null)
            {
                <img style='width:240px; height:180px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.AvatarByte))" />
            }
        </dd>
</dl>
</div>