@model NewListOfEmployees.Models.Employee
@{
    ViewBag.Title = Model.Fio;
}
<h2>Работник @Model.Fio</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.ID</dd>

        <dt>Дата рождения</dt>
        <dd>@Model.DateOfBirth</dd>
        <dt>Пол</dt>
        <dd>@Model.Sex</dd>
        <dt>Телефон</dt>
        <dd>@Model.PhoneNumber</dd>
        <dd>
            @if (Model.Avatar != null)
            {
                <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
            }
        </dd>
    </dl>
</div>